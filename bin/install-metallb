#!/usr/bin/env bash
# see https://blog.quickbird.uk/domesticating-kubernetes-d49c178ebc41#432a

set -eEuo pipefail
[[ -n "${DEBUG:-""}" ]] && set -x

main() {
  addresses="$1"
  [[ "$addresses" == *-* ]] || error "Address must be in format 192.168.0.32-192.168.0.63"

  kubectl apply -f https://raw.githubusercontent.com/metallb/metallb/v0.9.3/manifests/namespace.yaml
  kubectl apply -f https://raw.githubusercontent.com/metallb/metallb/v0.9.3/manifests/metallb.yaml
  if ! exists -n metallb-system secret memberlist >/dev/null; then
    kubectl create secret generic -n metallb-system memberlist --from-literal=secretkey="$(openssl rand -base64 128)"
  fi

  if ! exists -n metallb-system config; then
    cat <<EOF | kubectl apply -f -
kind: ConfigMap
apiVersion: v1
metadata:
  name: config
  namespace: metallb-system
data:
  config: |
    address-pools:
    - name: default
      protocol: layer2
      addresses:
      - "$addresses"
EOF
  fi
}

exists() {
  exists "$@" >/dev/null
  return $?
}

error() {
  echo >&2 "$@"
  exit 1
}

main "${@}"
